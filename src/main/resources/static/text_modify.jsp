        <script type="text/javascript">
		$().ready(function() {
			 $('#autosize').autosize();
			 $("#textForm").validate({
			        rules: {
			        	"text.msgName":  {
							required: true
						},
			        	"text.content":  {
							required: true
						}
					},
					messages: {
						"text.msgName":{
							required:"请输入文本消息名称"
						},
						"text.content":{
							required:"请输入文本消息内容"
						}
					},
			        errorClass: 'help-block',
			        errorElement: 'span',
			        highlight: function(element, errorClass, validClass) {
			            $(element).parents('.control-group').removeClass('success').addClass('error');
			        },
			        unhighlight: function(element, errorClass, validClass) {
			            $(element).parents('.control-group').removeClass('error').addClass('success');
			        },
		            submitHandler: function (form) {
		            	var options = {
		            	   //target: '#showmsg',
		            	   beforeSubmit:showStart,
		            	   success:showResponse,
		            	   dataType:  'json'
		            	};
			            
		            	$(form).ajaxSubmit(options);
	                  	return false;
		            }
				});
			 	function showStart(){
				    return true;
				}
			 	// post-submit callback 
			 	function showResponse(data)  { 
				 	if(data.success){
						bootbox.alert('您的文本消息编辑修改成功' ,function(){
							message_box.show('将跳转到您的文本消息列表管理界面!','success');
							var  page_list = function(){
								location.href="text_list.do";
							}
							window.setTimeout(page_list, 1000); 
				 		});
					}else{
						alert('发布失败: '+ '\n\n 状态码: \n' + data.resultInfo.returnCode + '\n\n 提示信息: \n' + data.resultInfo.returnMsg +  '.'); 
					}
			 	}
			});
        </script>

