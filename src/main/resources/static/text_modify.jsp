                                        	<div class="form-horizontal">
                                                <s:form id="textForm" namespace="/api" action="text_update" method="post" > 
                                                <s:hidden  id="textId" name="text.id" value="%{resultMap.text.id}"></s:hidden>
                                                <div class="control-group">
                                                    <label for="autosize" class="control-label">文本消息</label>
                                                    <div class="controls">
